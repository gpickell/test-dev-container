{
    "name": "VertiGIS Studio for Codespaces",    
    "dockerComposeFile": "docker-compose.yml",
    "service": "code",
    "onCreateCommand": "sh .devcontainer/create.sh",
    "postAttachCommand": "code ~/.INFO.md",
    "customizations": {
        "codespaces": {
            "openFiles": ["/.none"]
        },
        "vscode": {
            "settings": {
                "workbench.editorAssociations": {
                    ".INFO.md": "vscode.markdown.preview.editor"
                }
            }
        }
    },
    "hostRequirements": {
        "cpus": 4
    },
    "forwardPorts": [8080],
    "portsAttributes": {
        "3000": {
            "label": "Studio",
            "onAutoForward": "openBrowser"                        
        }
    }
}
